<script src="https://use.fontawesome.com/8a1c7ad851.js"></script>

<table class="type05">
  <tr>
    <th scope="row"><i class="fa fa-user" aria-hidden="true"></i>&nbsp;<b><%= pcomment.commenter %></th>
    <td><%= pcomment.body %></td>
    <td class="td-small">
      <div class="comment">
        <% if current_user %>
          <% if pcomment.user_id == current_user.id || current_user.tier < 4 %>
        <%= link_to '[삭제]', [pcomment.pointless, pcomment],
            method: :delete,
            data: {
              confirm:'Are you Sure?'
              }, :class=>"if-link" %>
        <% end %>
        <% end %>
      </div>
    </td>
  </tr>
</table>
