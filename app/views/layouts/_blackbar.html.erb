      <%= image_tag 'logo_inverse_03.png', class: 'barlogo'%>
  </a>
  <div class = "textholder" >
    <%if params[:controller]=="forests"%>
        <%@page_index1 = "currentpage"%>
      <%elsif params[:controller]=="pointlesses"%>
       <%@page_index2 = "currentpage"%>
      <%elsif params[:controller]=="events"%>
        <%@page_index3 = "currentpage"%>
      <%elsif params[:controller]=="partypost"%>
