      <form action="/search" class="navbar-form navbar-left" id = "searchbar" role="search">
        <div class="form-group input-group">
          <input type="text" class="form-control" placeholder="Search" name="term" id="srch-term">
          <div class="input-group-btn">
            <button class="btn btn-default" style="padding-bottom: 5px; margin-left: 10px;padding-top: 7px;" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
        </div>
      </form>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a class="dropdown-toggle aa" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user"></span> 브루인<span class="caret"></span></a>
        <ul class="dropdown-menu">
          <% if current_user %>
           <li id="profile-link"><%= link_to "내정보", root_path %></li>
           <li><%= link_to "로그아웃", signout_path, id: "sign_out" %><span class="glyphicon glyphicon-log-in"></span></li>
         <% else %>
           <li><%= link_to "로그인", "/auth/google_oauth2", id: "sign_in" %><span class="glyphicon glyphicon-log-in"></span></li>
         <% end %>
        </ul>
      </li>
    </ul>

</div>
