    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
