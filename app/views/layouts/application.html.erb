  <%= csrf_meta_tags %>

</head>
<body>
  <% if current_user %>
  <!-- The reportModal -->
  <div id="myModal" class="reportmodal">

    <!-- Modal content -->
    <div class="reportmodal-content">
      <span class="rmclose">&times;</span>
      <%= render "main/report_form" %>
    </div>
  </div>
  <% end %>
<%= yield %>

