</footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<%= javascript_include_tag 'fullcalendar', 'gcal', 'moment' %>

</body>
<script>
// Get the modal
var reportmodal = document.getElementById('myModal');


// Get the <span> element that closes the modal
var span = document.getElementsByClassName("rmclose")[0];

// When the user clicks the button, open the modal
function openrmodal(){
  reportmodal.style.display = "block";
}
// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    reportmodal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == reportmodal) {
      var closeReport = true;
    } else if (event.target == mymodal){
      var closeMymodal = true;
    } else {console.log("nothing");}
    if (closeReport){
      reportmodal.style.display = "none";
      console.log("report worked!");
    } else if (closeMymodal){
      mymodal.style.display = "none";
      console.log("myModal worked!");
    }
  }
</script>
</html>
