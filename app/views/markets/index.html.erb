<!-- market#index -->
<%= render 'layouts/blackbar'%>
<div id="menuimage">
  <div class = "titlebox" >
    <h5 class="mtitle">사고팔고</h5><br>
  </div>
  <%= image_tag 'IMG_5012.JPG', class: 'menuimage'%>
</div>
<!-- ///////////////게시글//////////////////////////// -->

<div class="main">
  <%= link_to "판매중인물건보기", markets_msindex_path, :class => "button-rec" %>

<table class="Eut">
  <thead>
    <tr>

      <th scope ="row">글쓴이</th>
      <th>판매여부</th>
      <th class="Eut-title-header">제목</th>
      <!-- <th colspan="3"></th> -->
      <th>작성시간</th>
    </tr>
  </thead>

  <tbody>
    <% @markets.each do |market| %>
      <tr class="Eut-body">
            <div>
            <td scope="row"><%=market.user.bname%>
            </td>
            <td>
            <% if current_user %>
              <% if current_user.id == market.user.id%>
                <% if market.sold %>
                  <text style="color:red;">[판매완료]</text>
                <% else %>
                  <%= link_to '[판매 완료 하기]', markets_sold_path(:id => market.id), method: :post, data: {confirm: '판매를 완료하시겠습니까?'}, class: "sold-link"%>
                <% end %>
              <% else %>
                <% if market.sold %>
                  <text style="color:red;">[판매완료]</text>
                <% else %>
                  <text style="color:green;">[판매중]</text>
                <% end %>
              <% end %>
            <% else %>
              <% if market.sold %>
                <text style="color:red;">[판매완료]</text>
              <% else %>
                <text style="color:green;">[판매중]</text>
              <% end %>
          <% end %>
            </td>
            <td>
              <a href="/markets/<%=market.id%>">
              <div class="Eut-title-body">
                <%=market.title%>
                <% if market.mcomments.size > 0%>
                 [<%=market.mcomments.size%>]
                 <%end %>
              </div>
              </a>
            </td>
            <td >
              <%=market.created_at.strftime('%I:%M%p, %b %e')%>
            </td>
        </div>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<div class="right">
  <div class = "colu three">
    <% if current_user%>
      <%= link_to new_market_path, {:style=>'text-decoration:none;'} do %>
        <div class="butn butn-dark-blue">글쓰기</div>
      <% end %>
    <% end %>
  </div>
</div>
</div>
