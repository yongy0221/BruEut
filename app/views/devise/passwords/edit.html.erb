<head>
  <%= stylesheet_link_tag "regis.css" %>
  <%= stylesheet_link_tag "navbar" %>
  <%=render 'layouts/navbar'%>
<style>
  footer {
    display: none;
  }
</style>
</head>
<body class="bady">
  <br><br><br><br><div class="border-form-div">
    <h2 style="text-align:center">비밀번호 변경</h2>
      <div class="slightleftregis" style="text-align:center">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field" style="text-align:center">
              <%= f.label :비밀번호, "새 비밀번호" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 자리 까지)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
            </div>

            <div class="field" style="text-align:center">
              <%= f.label :비밀번호_확인, "새 비밀번호를 재입력" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="actions" style="text-align:center">
              <%= f.submit "비밀번호 변경" %>
            </div>
          <% end %>
      </div>
    <%= render "devise/shared/links" %>
  </div>
</body>
